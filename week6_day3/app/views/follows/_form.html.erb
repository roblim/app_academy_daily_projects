<%# if current_user.follows?(user) %>
<%#= button_to 'Unfollow', user_follow_url(user), method: :delete %>
<%# else %>
<%#= button_to 'Follow', user_follow_url(user), method: :post %>
<%# end %>

<button type="button"
        name="button"
        class="follow-toggle"
        data-userid="<%= user.id %>"
        data-followstate="<%= current_user.follows?(user) ? 'followed' : 'not_followed' %>"></button>
