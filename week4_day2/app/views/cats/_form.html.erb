<%if action == :edit%>
  <%url = cat_url(cat)%>
<%else%>
  <%url = cats_url%>
<%end%>

<form action="<%=url%>" method="post">
  <% if action == :edit %>
  <input type="hidden" name="_method" value="PATCH">
  <% end %>

  <label for="name">Name</label>
  <input id="name" type="text" name="cat[name]" value= "<%=cat.name%>">
  <br>
  <label for="sex">Sex</label>

  <input id="sex" type="radio" name="cat[sex]" value="M"
  <%= cat.sex == "M" ? "checked" : "" %> >Male
  <input id="sex" type="radio" name="cat[sex]" value="F"
  <%= cat.sex == "F" ? "checked" : "" %> >Female<br>

  <label for="color">Color</label>
  <select id="color" name="cat[color]">
    <option disabled   <%= cat.color ? "" : "selected" %>>-- Please Select --</option>
    <option value="black"
    <%= cat.color == "black" ? "selected" : "" %> >Black</option>
    <option value="calico"
    <%= cat.color == "calico" ? "selected" : "" %>>Calico</option>
    <option value="white"
    <%= cat.color == "white" ? "selected" : "" %>>White</option>
    <option value="grey"
    <%= cat.color == "grey" ? "selected" : "" %>>Grey</option>
    <option value="orange"
    <%= cat.color == "orange" ? "selected" : "" %>>Orange</option>
  </select>
  <br>
  <label for="birthday">Birthday</label>
  <input id="birthday" type="date" name="cat[birth_date]" value="<%= cat.birth_date %>">
  <br>
  <label for="description">Description</label>
  <textarea id="description" name="cat[description]" ><%= cat.description%></textarea>
  <br>
  <input type="submit" value="<%= action == :edit ? "Update Cat Profile" : "Create Cat Profile"%>">
</form>
